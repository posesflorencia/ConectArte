@model Recurso

<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Modificar Recurso</h1>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form asp-action="UpdateRecurso" controller="Recurso" method="post">
        <div class="form-group">
            <label for="Id">Id:</label>
            <input type="text" asp-for="Id" class="form-control text-center" id="Id" name="Id" readonly />
        </div>

        <div class="form-group">
            <label for="Tipo">Tipo:</label>
            <select asp-for="Tipo" class="form-control text-center" id="Tipo" name="Tipo">
                <option value="">-- Selecciona un tipo --</option>
                @foreach (var tipo in ViewData["TiposRecurso"] as List<string>)
                {
                    <option value="@tipo" selected="@(Model.Tipo == tipo)">
                        @tipo
                    </option>
                }
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Disponible">Disponible:</label>
            <select asp-for="Disponible" class="form-control text-center" id="Disponible" name="Disponible">
                <option value="true" selected="@(Model.Disponible)">Sí</option>
                <option value="false" selected="@(Model.Disponible == false)">No</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Modificar Recurso</button>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
